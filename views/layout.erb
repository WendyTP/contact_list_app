<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <header>
      <h1>Contact List<h1>
      <div class="actions">
      <%= yield_content :header_links %>
      </div>
    </header>
    
    <% if session[:error] %>
      <p class="flass error"><%= session.delete(:error) %></p>
    <% end %>

    <% if session[:success] %>
      <p class="flass success"><%= session.delete(:success) %></p>
     <% end %>   

    <main>
      <%= yield %>
    </main>
  </body>
</html>